@import "~normalize.css"
html
body
  font-family: "Helvetica Neue", Helvetica, Arial, "Lucida Grande", "Noto Sans", "Noto Sans CJK JP", sans-serif
*
  box-sizing: border-box
a
  color: inherit
  text-decoration: none

.container
  padding-top: 2em
  width: 800px
  margin: 0 auto

.posts
  display: grid
  grid-template-columns: repeat(3, 30%)
  grid-template-rows: auto
  grid-column-gap: 1em
  grid-row-gap: 1em
  width: 100%

.post-card
  width: 100%
  height: 14em
  border: 1px solid #F5F5F5
  box-shadow: 0 6px 20px 0 #F5F5F5
  border-radius: 3px
  padding: 1em

.post-preview
  display: flex
  width: 100%
  height: 100%
  &-title
    line-height: 1.5
    text-decoration: none
