@import "~normalize.css"
@import "color.styl"
@import "article.styl"
@import "~prismjs/themes/prism-solarizedlight.css"
html
body
  font-family: "Helvetica Neue", Helvetica, Arial, "Lucida Grande", "Noto Sans", "Noto Sans CJK JP", sans-serif
  background: $white
*
  box-sizing: border-box
a
  color: inherit
  text-decoration: none

.container
  padding: 2em 0
  width: 800px
  margin: 0 auto

.posts
  display: grid
  grid-template-columns: repeat(3, 30%)
  grid-template-rows: auto
  grid-column-gap: 2em
  grid-row-gap: 2em
  width: 100%

.post-card
  width: 100%
  height: 14em
  border: 1px solid $lightGray
  box-shadow: 0 0 20px 0 $lightGray
  background: $white
  border-radius: 3px
  padding: 1em
  &:hover
    box-shadow: 0 2px 16px 0 rgba($blue, .5)

.post-preview
  display: flex
  width: 100%
  height: 100%
  &-title
    line-height: 1.5
    text-decoration: none
    color: $darkGray
